@inherits LayoutComponentBase

<div class="main">
    <header role="banner"></header>
    <nav role="navigation" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <a class="skip-link sr-only sr-only-focusable" href="#content">Skip to content</a>
    <div class="container">
        <a class="navbar-brand" href="#">
            <img height="50rem" src="images/logo.png" alt="JSON Validate logo"/> JSON Validate</a>
    </div>
    </nav>
    <main id="content" role="main">
        <div class="container content px-4">
            @Body
        </div>
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - @DateTime.Now.Year JSON Validate · 
            <a href="/privacy">Privacy</a> · 
            <a href="https://github.com/marcusturewicz/jsonvalidate.net/issues/new/choose" target="_blank" rel="noopener">Feedback</a> · 
            Powered by @System.Runtime.InteropServices.RuntimeInformation.FrameworkDescription
        </div>
    </footer>    
</div>
